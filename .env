# Base Agent Engineering Environment Variables Configuration
# Note: Do not commit this file to version control system

# =============================================================================
# API Key Configuration
# =============================================================================

# DashScope API Key (Alibaba Cloud Tongyi Qianwen)
DASHSCOPE_API_KEY=

# OpenAI API Key (if using OpenAI models)
OPENAI_API_KEY=

# Tavily API Key (for web search)
TAVILY_API_KEY=

# LangSmith API Key (for tracing, optional)
LANGSMITH_API_KEY=

# =============================================================================
# Application Service Configuration
# =============================================================================

# API Service Configuration
API_HOST=0.0.0.0
API_PORT=8888
API_WORKERS=4
API_RELOAD=false

# Database Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Management Interface Port
ATTU_PORT=8889

# =============================================================================
# Model Configuration
# =============================================================================

# Default Model Settings
DEFAULT_CHAT_MODEL=primary
DEFAULT_EMBEDDING_MODEL=primary
DEFAULT_RERANKING_MODEL=primary

# =============================================================================
# LangSmith Tracing Configuration (Optional)
# =============================================================================

LANGSMITH_PROJECT=base-agent-engineering
LANGSMITH_TRACING=false

# =============================================================================
# Logging and Debug Configuration
# =============================================================================

LOG_LEVEL=INFO
LOG_FORMAT=json
DEBUG=false

# =============================================================================
# Security Configuration
# =============================================================================

ALLOWED_ORIGINS=*
CORS_ENABLED=true

# =============================================================================
# Performance Configuration
# =============================================================================

MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30
EMBEDDING_BATCH_SIZE=100
RERANKING_BATCH_SIZE=32

# =============================================================================
# Storage Configuration
# =============================================================================

KNOWLEDGE_BASE_PATH=./knowledge_base
UPLOAD_MAX_SIZE=100MB
SUPPORTED_FILE_TYPES=pdf,txt,md,docx,pptx

# =============================================================================
# Monitoring Configuration
# =============================================================================

ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
